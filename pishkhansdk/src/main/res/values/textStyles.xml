<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_normal">
        <item name="fontFamily">@font/iransansx_fa_num_regular</item>
        <item name="android:fontFamily">@font/iransansx_fa_num_regular</item>
        <item name="android:textSize">@dimen/text_regular_6</item>
    </style>

    <style name="text_normal_primary_dark" parent="text_normal">
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="key_text_style" parent="text_normal">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">@dimen/margin_11</item>
    </style>

    <style name="value_text_style" parent="text_normal">
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textSize">@dimen/margin_11</item>
    </style>

    <style name="text_normal_secondary" parent="text_normal">
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="text_normal_grey700" parent="text_normal">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="header">
        <item name="fontFamily">@font/iransansx_fa_num_bold</item>
        <item name="android:fontFamily">@font/iransansx_fa_num_bold</item>
        <item name="android:textSize">@dimen/text_regular_6</item>
    </style>

    <style name="header_primary_dark" parent="header">
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="description">
        <item name="fontFamily">@font/iransansx_fa_num_regular</item>
        <item name="android:fontFamily">@font/iransansx_fa_num_regular</item>
        <item name="android:textSize">@dimen/text_regular_1</item>
    </style>

    <style name="description_secondary" parent="description">
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="description_grey700" parent="description">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="description_primary_dark" parent="description">
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="text_button">
        <item name="fontFamily">@font/iransansx_fa_num_regular</item>
        <item name="android:fontFamily">@font/iransansx_fa_num_regular</item>
        <item name="android:textSize">@dimen/text_regular_3</item>
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="text_button_white" parent="text_button">
        <item name="android:textColor">@color/white_header</item>
    </style>

    <style name="text_normal_green" parent="text_normal">
        <item name="android:textColor">@color/pishkhansdk_inquiry_button_color</item>
    </style>

    <style name="text_button_secondary" parent="text_button">
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="GlobalTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/edittext_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edittext_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edittext_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edittext_radius</item>
        <item name="boxStrokeWidth">@dimen/edittext_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/edittext_stroke_width</item>
        <item name="boxStrokeErrorColor">@color/state_error</item>
        <item name="errorTextColor">@color/state_error</item>
        <item name="boxStrokeColor">@color/background_edittext_stroke_enable_disable</item>
        <item name="boxBackgroundColor">@color/background_edittext_solid_enable_disable</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="GlobalTextInputEditText" parent="text_normal">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_edittext_enable_disable</item>
        <item name="android:textColorHint">@color/text_color_edittext_enable_disable</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="TextBold">
