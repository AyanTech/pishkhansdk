<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/edittext_height"
    android:background="@drawable/pishkhansdk_background_component_bank_card_number"
    android:paddingStart="@dimen/margin_16"
    android:paddingEnd="@dimen/margin_16">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hintTv"
        style="@style/Text1Light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_color_edittext_enable_disable"
        android:textDirection="anyRtl"
        tools:text="شماره کارت مبدأ" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconIv"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_4"
        app:tint="@color/gray5"
        tools:srcCompat="@drawable/pishkhansdk_ic_arrow_down" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/startIconIv"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_2"
        tools:srcCompat="@drawable/pishkhansdk_ic_arrow_down" />
</RelativeLayout>