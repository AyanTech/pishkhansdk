<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/extraInfoComponent"
                layout="@layout/pishkhansdk_component_extra_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                tools:visibility="visible" />

            <RelativeLayout
                android:id="@+id/topSectionRl"
                style="@style/pishkhansdk_fragment_cnpg_topSectionRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extraInfoComponent"
                android:layout_centerHorizontal="true">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/descriptionTv"
                    style="@style/pishkhansdk_fragment_cnpg_descriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_bank_card_data" />

                <include
                    android:id="@+id/bankCardNumberComponent"
                    layout="@layout/pishkhansdk_component_bank_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_below="@id/descriptionTv"
                    android:layout_marginTop="@dimen/margin_16" />

                <include
                    android:id="@+id/bankCardDateComponent"
                    layout="@layout/pishkhansdk_component_bank_card_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_below="@id/bankCardNumberComponent"
                    android:layout_marginTop="@dimen/margin_16" />

                <include
                    android:id="@+id/bankCardCvv2Component"
                    layout="@layout/pishkhansdk_component_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_below="@id/bankCardDateComponent"
                    android:layout_marginTop="@dimen/margin_16" />

                <include
                    android:id="@+id/bankCardPasswordComponent"
                    layout="@layout/pishkhansdk_component_bank_card_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_below="@id/bankCardCvv2Component"
                    android:layout_marginTop="@dimen/margin_16" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/saveCardDataCb"
                    style="@style/pishkhansdk_fragment_cnpg_saveCardDataCb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bankCardPasswordComponent"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/save_bank_card_data"
                    tools:checked="true" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/bottomSectionRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:elevation="@dimen/margin_8"
        android:padding="@dimen/margin_16">

        <include
            android:id="@+id/payButtonComponent"
            layout="@layout/pishkhansdk_component_button_filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>