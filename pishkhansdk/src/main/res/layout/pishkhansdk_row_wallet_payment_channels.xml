<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/selectionRb"
        style="@style/pishkhansdk_row_wallet_payment_channels_selectionRb"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_8"
        tools:checked="true" />

    <RelativeLayout
        android:id="@+id/paymentChannelRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/spacer"
        android:layout_toEndOf="@id/selectionRb"
        android:background="@drawable/pishkhansdk_background_row_wallet_payment_channel"
        android:padding="@dimen/margin_8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/paymentChannelShowNameTv"
            style="@style/pishkhansdk_row_wallet_payment_channels_paymentChannelShowNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_toStartOf="@id/paymentChannelIconIv"
            tools:text="درون برنامه‌ای" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/paymentChannelIconIv"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/spacer"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_1"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>