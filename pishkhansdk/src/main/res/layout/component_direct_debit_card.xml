<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_8"
    android:background="@drawable/back_white_rounded_radius6"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rightIndicatorIv"
        android:layout_width="@dimen/right_indicator_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/firstLl"
        android:layout_alignBottom="@id/thirdLl"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/right_indicator" />

    <LinearLayout
        android:id="@+id/firstLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTv"
            style="@style/header_primary_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowIv"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:padding="@dimen/margin_2"
            android:rotation="90"
            app:srcCompat="@drawable/ic_keyboard_arrow_down" />

    </LinearLayout>

    <View
        android:id="@+id/dashedLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:layout_below="@id/firstLl"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:background="@drawable/dashed_line" />

    <LinearLayout
        android:id="@+id/secondLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashedLine"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amountTv"
            style="@style/text_normal_primary_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center_vertical|start" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionTv"
            style="@style/description_secondary"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_24"
            android:layout_weight="4"
            android:gravity="end|center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondLl"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginEnd="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noteTv"
            style="@style/text_normal_grey700"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center_vertical|start" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTv"
            style="@style/text_normal_grey700"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_24"
            android:layout_weight="4"
            android:gravity="end|center_vertical"
            android:textAlignment="viewEnd"
            android:textDirection="anyRtl" />

    </LinearLayout>

</RelativeLayout>