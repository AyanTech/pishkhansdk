<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRl"
    style="@style/pishkhansdk_component_extra_info_rootRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/firstKeyValueLayout"
        layout="@layout/pishkhansdk_row_extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_12" />

    <include
        android:id="@+id/secondKeyValueLayout"
        layout="@layout/pishkhansdk_row_extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstKeyValueLayout"
        android:layout_centerHorizontal="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detailTv"
        style="@style/pishkhansdk_component_extra_info_detailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/extraInfoRv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_12"
        android:drawableEnd="@drawable/pishkhansdk_ic_arrow_down"
        android:drawablePadding="@dimen/margin_8"
        android:text="@string/detail" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/extraInfoRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondKeyValueLayout"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>