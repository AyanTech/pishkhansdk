<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp"
    android:layout_marginBottom="@dimen/margin_8"
    android:background="@drawable/back_white_radius8"
    android:backgroundTint="@color/pishkhansdk_text_gray2"
    android:paddingStart="@dimen/margin_12"
    android:paddingTop="@dimen/margin_6"
    android:paddingEnd="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_6">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bankIconIv"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pishkhansdk_background_radius_4"
        android:padding="@dimen/margin_1" />

    <LinearLayout
        android:id="@+id/cardDataLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_toStartOf="@id/deleteBankCardIv"
        android:layout_toEndOf="@id/bankIconIv"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bankNameTv"
            style="@style/pishkhansdk_row_bank_cards_bankNameTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="بانک ملت" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cardNumberTv"
            style="@style/pishkhansdk_row_bank_cards_cardNumberTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="بانک ملت" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deleteBankCardIv"
        android:layout_width="@dimen/margin_32"
        android:layout_height="@dimen/margin_32"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_4"
        app:srcCompat="@drawable/ic_trash" />
</RelativeLayout>